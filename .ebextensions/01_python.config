 container_commands:
   01_mkdir_venv:
     command: |
       echo "Creating virtual environment in /var/app/staging/venv"
       python3 -m venv /var/app/staging/venv || { echo "Failed to create venv"; exit 1; }
   02_install_requirements:
     command: |
       echo "Installing requirements in /var/app/staging/venv"
       /var/app/staging/venv/bin/pip install -r /var/app/staging/requirements.txt || { echo "Failed to install requirements"; exit 1; }
   03_check_venv:
     command: |
       echo "Listing virtual environment directory"
       ls -l /var/app/staging/venv/bin || { echo "venv directory does not exist"; exit 1; }
